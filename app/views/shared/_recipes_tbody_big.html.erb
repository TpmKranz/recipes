<% unless recipes.empty? %>

      <tbody>
        <% recipes.in_groups_of(3).each do |recipe_array| %>
          <tr>
          <% recipe_array.each do |recipe|
              unless recipe.nil? %>
              <td style="width:350px;">
                <% if recipe.picture?
                  image_url = recipe.picture.big_thumb
                else
                  image_url = "no_picture_big.png"
                end %>
                   <%= link_to recipe, :class => "recipe-picture-#{recipe.id}" do %><%= image_tag image_url, :class => "big_thumb" %><% end %>
              </td>
          <% else %>
            <td style="width: 350px"></td>

          <% end
        end %>

          <tr>
          <% recipe_array.each do |recipe| %>
            <th class="th_big"><%= if !recipe.nil? then recipe.name end %></th>
          <% end %>
          </tr>

          <tr>
          <% recipe_array.each do |recipe| %>
            <td class="description"><%= if !recipe.nil? && recipe.description? then recipe.description.truncate_words(9) end %></td>
          <% end %>
          </tr>

          </tr>
        <% end %>
      </tbody>

    <% else %>

      <tbody>
        <tr>
          <td style="height: 50px;" colspan="2">Nothing to show.</td>
        </tr>
      </tbody>

<% end %>
